# Example Environment Configuration for Perp DEX Tools (Java)
# Copy this file to .env and fill in your actual values

# ==========================================
# General Settings
# ==========================================

# Timezone for logging (default: Asia/Shanghai)
TIMEZONE=Asia/Shanghai

# Account name for multi-account setups (optional)
# This will be included in log file names
ACCOUNT_NAME=

# Request timeout in milliseconds (default: 10000)
REQUEST_TIMEOUT_MS=10000

# ==========================================
# Notification Settings (Optional)
# ==========================================

# Telegram Bot
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Get chat ID by messaging your bot and visiting:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=

# Lark (Feishu) Webhook
# Create a webhook in your Lark group settings
LARK_TOKEN=

# ==========================================
# Exchange: Lighter
# ==========================================

# Private key for Lighter API
API_KEY_PRIVATE_KEY=

# Lighter account and API key indices
LIGHTER_ACCOUNT_INDEX=0
LIGHTER_API_KEY_INDEX=0

# ==========================================
# Exchange: Backpack
# ==========================================

# Backpack API credentials
BACKPACK_API_KEY=
BACKPACK_API_SECRET=
BACKPACK_ACCOUNT_INDEX=0

# ==========================================
# Exchange: EdgeX
# ==========================================

# EdgeX API credentials
EDGEX_API_KEY=
EDGEX_API_SECRET=
EDGEX_PRIVATE_KEY=

# ==========================================
# Exchange: Paradex
# ==========================================

# Paradex API credentials
PARADEX_API_KEY=
PARADEX_API_SECRET=
PARADEX_PRIVATE_KEY=

# ==========================================
# Exchange: Aster
# ==========================================

# Aster API credentials
ASTER_API_KEY=
ASTER_API_SECRET=
ASTER_PRIVATE_KEY=

# ==========================================
# Exchange: GRVT
# ==========================================

# GRVT API credentials
GRVT_API_KEY=
GRVT_API_SECRET=
GRVT_PRIVATE_KEY=

# ==========================================
# Exchange: Extended
# ==========================================

# Extended API credentials
EXTENDED_API_KEY=
EXTENDED_API_SECRET=
EXTENDED_PRIVATE_KEY=

# ==========================================
# Exchange: Apex
# ==========================================

# Apex API credentials
APEX_API_KEY=
APEX_API_SECRET=
APEX_PRIVATE_KEY=

# ==========================================
# Trading Parameters (Can also be set via CLI)
# ==========================================

# These can be overridden by command-line arguments
# TRADING_EXCHANGE=lighter
# TRADING_TICKER=BTC-PERP
# TRADING_QUANTITY=0.001
# TRADING_DIRECTION=buy
# TRADING_TAKE_PROFIT=0.5
# TRADING_MAX_ORDERS=10
# TRADING_WAIT_TIME=60
# TRADING_GRID_STEP=1.0
# TRADING_STOP_PRICE=-1
# TRADING_PAUSE_PRICE=-1
# TRADING_BOOST_MODE=false
